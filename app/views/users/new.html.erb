<h2>Sign Up</h2>

<%= render "layouts/errors" %>

<form class="form-horizontal" action="<%= users_url %>" method="post">
	
  <%= auth_token_input %>
  
  <div class="form-group">
    <label for="sign-up-email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="text" name="user[email]" placeholder="email" id="sign-up-email">
    </div>
  </div>
  
  <div class="form-group">
    <label for="sign-up-password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" name="user[password]" placeholder="password" id="sign-up-password">
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
	  <input type="submit" value="Create Account" class="btn btn-default">
    </div>
  </div>
  
</form>