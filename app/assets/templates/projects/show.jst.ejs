<div class='project-header'>
    <%= project.escape('name') %>
</div>

<div id="column-container">
	<div class='project-info left-col'>
		<div class="project-image">
			<img src='<%=project.escape('image_url')%>'></img>
		</div>	

		<div id="project-desc">
			<pre><%= project.escape('description') %></pre>
		</div>
	</div>


	<div class='project-info right-col'>
		<div class="progress-wrap progress show" data-progress-fraction="<%=progressFraction%>">
		  <div class="progress-bar progress show"></div>
		</div>
		<div class="smallish-text-underneath">
			$<%=project.donationTotal%> pledged so far
		</div>
		
	  <div id="donation-goal">
		  <div class="larger-text-top">$<%=project.escape('goal')%></div>
		  <div class="smallish-text-underneath">goal</div>  
	  </div>
	
	  <!-- <div id="location"> -->
	    <!-- <h4><%= project.escape('location') %></h4> -->
	  <!-- </div> -->
  
	  <div id="deadline">
		<div class="larger-text-top"><%= daysLeft %></div>
		<div class="smallish-text-underneath">days to go</div>  
	  </div> 
  
	  <button id="donate" class="btn btn-default">Back This Project!</button>
	  
	  <div id="rewards-index">

	  </div>	  
	</div>
</div>
