<form id="reward-form">
	<span id="add-reward-title">Add a new Reward for your donors!</span><br>
	
    <div class="form-group">
		<label for='min-pledge'>Minimum Pledge:</label><br>
		<span id="dollar-sign">$</span>
		<input type='number' min='1' name='min_pledge' id='min-pledge'><br>
	</div>
	
    <div class="form-group">
		<label for='reward-description'>Reward Description:</label><br>
		<textarea name='description' id='reward-description'></textarea><br>
	</div>
	
  	<div class="form-group">		
		<input type='submit' value='Add Reward!' class="btn btn-default submit">
		<button class="btn btn-default cancel">Cancel</button>
	</div>
	
</form>