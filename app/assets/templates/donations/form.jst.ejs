<div class="pop-up-form new-donation">	
	<form id="donation-form">	
		<span id="donate-title">Donate</span><br>
	
	    <div class="form-group">
			<label for='amount'>Please enter amount:</label><br>
			<span id="dollar-sign">$</span>
			<input type='number' min='1' name='amount' id='amount' value="<%=defaultAmount%>">
		</div>
	
	  	<div class="form-group">		
			<input type='submit' value='Donate!' class="btn btn-default submit">
			<button class="btn btn-default cancel">Cancel</button>
		</div>
	</form>
	
	<div class="spinner hidden">
	  <div class="spinner-container container1">
	    <div class="circle1"></div>
	    <div class="circle2"></div>
	    <div class="circle3"></div>
	    <div class="circle4"></div>
	  </div>
	  <div class="spinner-container container2">
	    <div class="circle1"></div>
	    <div class="circle2"></div>
	    <div class="circle3"></div>
	    <div class="circle4"></div>
	  </div>
	  <div class="spinner-container container3">
	    <div class="circle1"></div>
	    <div class="circle2"></div>
	    <div class="circle3"></div>
	    <div class="circle4"></div>
	  </div>
	</div>
	
	<div id="thank-you" class="hidden">
		Thanks for donating!
	</div>
</div>

